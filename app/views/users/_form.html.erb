<% if @user.errors.any? %>
 <div id="error_explanation">
  <div class="alert alert-error">
 The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
     <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
      </ul>
        </div>
        <% end %>

<%= form_for  (@user) do |f| %>
  <div class="field">
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
