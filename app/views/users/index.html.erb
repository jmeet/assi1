<h1> Listing users </h1>
<table>
  <tr>
    <th>User</th>
    <th>Password</th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |post| %>
    <tr>
      <td><%= post.user %></td> 
      <td><%= post.password %> </td>
      <td><%= link_to 'Show', post %></td>
    
      <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?',
                                       :method => :delete %></td>
    </tr>
  <%end%>
</table>



<p>New user? <%= link_to "Sign up now!",new_user_path %></p>

